{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [".cursor/rules/*.mdc", ".cursor/rules/*.md", "~/.cursor/rules/*.mdc", "~/.cursor/rules/*.md"],
  // Permission wildcards allow for ` *` at the end to match the command itself (eg. `ls *` matches `ls`)
  "permission": {
    "bash": {
      "*": "ask",
      "cargo build *": "allow",
      "cargo check *": "allow",
      "cargo clippy *": "allow",
      "cargo doc *": "allow",
      "cargo fmt *": "allow",
      "cargo info *": "allow",
      "cargo run *": "allow",
      "cargo search *": "allow",
      "cargo test *": "allow",
      "curl *": "allow",
      "cut *": "allow",
      "echo *": "allow",
      "find *": "allow",
      "git add *": "allow",
      "git checkout *": "allow",
      "git commit *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git show *": "allow",
      "git status *": "allow",
      "grep *": "allow",
      "head *": "allow",
      "ls *": "allow",
      "mv *": "allow",
      "nl *": "allow",
      "npm build *": "allow",
      "npm install *": "allow",
      "npm uninstall *": "allow",
      "npm run *": "allow",
      "npm update *": "allow",
      "printf *": "allow",
      "pwd": "allow",
      "rg *": "allow",
      "tail *": "allow",
      "wc *": "allow",
    },
    "edit": "allow",
  },
  "disabled_providers": ["opencode", "llama-swap"],
  "plugin": [
    "opencode-cursor-auth@1.0.16"
  ],
  "provider": {
/*
    // Should be fixed in https://github.com/anomalyco/opencode/commit/40836e96835862e98e042d3fc0869970eaaaedfb
    // We need to set store: false to avoid "Item 'rs_...' of type 'reasoning' was provided without its required following item."
    // See: https://github.com/anomalyco/opencode/issues/2941
    "openai": {
      "models": {
        "gpt-5-codex": {
          "options": {
            "include": ["reasoning.encrypted_content"],
            "store": false,
          },
        },
        "gpt-5.1-codex": {
          "options": {
            "include": ["reasoning.encrypted_content"],
            "store": false,
          },
        },
        "gpt-5.1-codex-mini": {
          "options": {
            "include": ["reasoning.encrypted_content"],
            "store": false,
          },
        },
        "gpt-5.2": {
          "options": {
            "include": ["reasoning.encrypted_content"],
            "store": false,
          },
        },
        "gpt-5.2-codex": {
          "options": {
            "include": ["reasoning.encrypted_content"],
            "store": false,
          },
        },
      },
    },
    "cursor": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Cursor Agent",
      "options": {
        "baseURL": "http://127.0.0.1:32123/v1"
      },
      "models": {
        "auto": { "name": "Cursor Auto" },
        "gpt-5.1": { "name": "Cursor GPT-5.1" },
        "gpt-5.2": { "name": "Cursor GPT-5.2" },
        "gpt-5.1-codex": { "name": "Cursor GPT-5.1 Codex" },
        "gpt-5.2-codex": { "name": "Cursor GPT-5.2 Codex" },
        "sonnet-4.5": { "name": "Cursor Sonnet 4.5" },
        "sonnet-4.5-thinking": { "name": "Cursor Sonnet 4.5 Thinking" },
        "opus-4.5": { "name": "Cursor Opus 4.5" },
        "opus-4.5-thinking": { "name": "Cursor Opus 4.5 Thinking" },
      }
    },
*/
    "llama-swap": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "llama-swap (local)",
      "options": {
        "baseURL": "http://10.42.40.71:8989/v1"
      },
      "models": {
        "Qwen3-Coder": {
          "name": "Qwen3-Coder: A3B-30B (local)",
          "limit": {
            "context": 102400,
            "output": 65536
          }
        },
        "Qwen3": {
          "name": "Qwen3: 32B (local)",
          "limit": {
            "context": 102400,
            "output": 65536
          }
        },
        "Devstral-Small-2-24B": {
          "name": "Devstral 2: Small 24B (local)",
          "limit": {
            "context": 102400,
            "output": 65536
          }
        }
      }
    }
  }
}