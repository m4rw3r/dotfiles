{
  "$schema": "https://opencode.ai/config.json",
  // NOTE: For WSL, ensure systemd-timesyncd is disabled.
  // https://github.com/anomalyco/opencode/issues/5361#issuecomment-3784940613
  // Permission wildcards allow for ` *` at the end to match the command itself (eg. `ls *` matches `ls`)
  "permission": {
    "bash": {
      "*": "ask",
      "cargo build *": "allow",
      "cargo check *": "allow",
      "cargo clippy *": "allow",
      "cargo doc *": "allow",
      "cargo fmt *": "allow",
      "cargo info *": "allow",
      "cargo run *": "allow",
      "cargo search *": "allow",
      "cargo test *": "allow",
      "curl *": "allow",
      "cut *": "allow",
      "echo *": "allow",
      "find *": "allow",
      "git add *": "allow",
      "git checkout *": "allow",
      "git commit *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git ls-files *": "allow",
      "git show *": "allow",
      "git status *": "allow",
      // We're being conservative with git-branch here to avoid deleting things
      "git branch": "allow",
      "git branch --list": "allow",
      "git branch --show-current": "allow",
      "git restore --staged": "allow",
      "grep *": "allow",
      "head *": "allow",
      "ls *": "allow",
      "mkdir *": "allow",
      "mv *": "allow",
      "nl *": "allow",
      "npm build *": "allow",
      "npm install *": "allow",
      "npm uninstall *": "allow",
      "npm run *": "allow",
      "npm update *": "allow",
      "printf *": "allow",
      "pwd": "allow",
      "rg *": "allow",
      "sort": "allow",
      "tail *": "allow",
      "wc *": "allow",
    },
    "edit": "allow",
  },
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "theme": "system",
  "keybinds": {
    // Some VIM-like keybinds in addition to the defaults
    "messages_half_page_up": "ctrl+alt+u,ctrl+u",
    "messages_half_page_down": "ctrl+alt+d,ctrl+d",
    "messages_first": "ctrl+g,home",
    "messages_last": "ctrl+alt+g,end",
    // Conflicts
    "app_exit": "ctrl+c,<leader>q", // ctrl+d removed
    "input_delete_to_line_start": "none", // ctrl+u removed
    "input_delete": "delete,shift+delete", // ctrl+d removed
  },
  "plugin": [],
  "experimental": {
    "disable_paste_summary": true,
  },
  "disabled_providers": ["llama-swap", "cursor"],
  "provider": {
    "llama-swap": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "llama-swap (local)",
      "options": {
        "baseURL": "http://10.42.40.71:8989/v1"
      },
      "models": {
        "Qwen3-Coder": {
          "name": "Qwen3-Coder: A3B-30B",
          "limit": {
            "context": 102400,
            "output": 65536
          }
        },
        "Qwen3": {
          "name": "Qwen3: 32B",
          "limit": {
            "context": 102400,
            "output": 65536
          }
        }
      }
    }
  }
}
